{
  "name": "@limo/eslint-config",
  "version": "0.2.0",
  "description": "Opinionated linting rules & configuration.",
  "displayName": "@limo/eslint-config",
  "author": "Rashed Makkouk <rashed.makkouk@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">= 12.16.1",
    "yarn": ">=1.4.0"
  },
  "keywords": [
    "ESLint",
    "TypeDoc",
    "TypeScript",
    "TSDoc",
    "Git",
    "md",
    "Markdown",
    "Prettier",
    "vscode",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git@192.168.1.240:org/eslint-config"
  },
  "scripts": {
    "empty-package": "rm -rf c:/npm/@limo/eslint-config/*",
    "copy-package-metadata": "cp -r ./{package.json,yarn.lock,README.md,LICENSE} c:/npm/@limo/eslint-config",
    "publish-local": "yarn copy-package-metadata && mkdir c:\\npm\\@limo\\eslint-config\\lib && cp -r ./build/* c:/npm/@limo/eslint-config/lib",
    "empty-build": "rm -rf ./build/*",
    "copy-build-files": "cp -r ./src/bases ./build",
    "compile": "yarn empty-build && tsc --build && yarn copy-build-files",
    "build": "yarn compile && yarn empty-package && yarn publish-local",
    "uP": "yarn upgrade --latest",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  }
}
