{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": [
      "ES2017",
      "ES2018",
      "ES2019"
    ],
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "noEmit": false,
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "skipLibCheck": false,
	"experimentalDecorators": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/*.config.ts",
    "**/*.spec.ts",
    "**/scripts",
    "**/__mocks__",
    "**/__tests__"
  ]
}